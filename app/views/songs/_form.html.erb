<%= form_for [@artist, @song] do |f| %>

  <ul class="errors">
   <% @song.errors.full_messages.each do |msg| %>
     <li><p><%= msg %></p></li>
   <% end %>
 </ul>

  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Song name", class: "form-control", id: "song-name" %>
  </div>

  <div class="form-group">
    <label>Album</label>
    <%= f.text_field :album, placeholder: "Album", class: "form-control", id: "song-album" %>
  </div>

  <div class="form-group">
    <label>Release</label>
    <%= f.text_field :release_year, placeholder: "Release Year (#{Song::RELEASE_YEAR})", class: "form-control", id: "song-year" %>
  </div>

  <div class="actions pull-right">
     <%= f.submit "Save", class: "btn btn-success" %>
   </div>

   <%= link_to "back", artist_path(@artist), class: "pull-left btn btn-default" %>

<% end %>
